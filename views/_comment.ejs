<script src="https://kit.fontawesome.com/3098645223.js" crossorigin="anonymous"></script>

<div id="comment-<%= comment._id %>">
    <div>
        <%= comment.content %>
        <small><%= comment.user.name %></small>
        &nbsp;
        <% if(locals.user && locals.user.id == comment.user._id) {%>
            <small>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment._id %>"><i class="fa-solid fa-trash"></i></a>
            </small> 
      <% } %>
      &nbsp;
        <!-- display the likes of this comment, if the user is logged in, then show the link to toggle likes, else, just show the count -->
            <!-- study about the data attribute -->
            <small>
                <% if (locals.user){ %>
                    <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                            <%= comment.likes.length %> <i class="fa-solid fa-thumbs-up"></i>
                    </a>
                <% }else{ %>
                    <%= comment.likes.length %> <i class="fa-solid fa-thumbs-up"></i>
                <% } %>
            </small>
        </div>
</div>
